ALIBABA_CLOUD_ACCESS_KEY_ID=your-alibaba-access-key-id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your-alibaba-access-key-secret

# ====================================
# 科大讯飞语音识别配置 (语音功能可选)
# ====================================
XFYUN_APP_ID=your-xfyun-app-id
XFYUN_API_SECRET=your-xfyun-api-secret
XFYUN_API_KEY=your-xfyun-api-key

# ====================================
# 其他服务配置 (可选)
# ====================================
# NextAuth配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# 微信配置 (如需微信登录)
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# OCR文字识别服务配置 (备用OCR服务)
OCR_SPACE_API_KEY=your-ocr-space-api-key

# ====================================
# 开发环境配置
# ====================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1